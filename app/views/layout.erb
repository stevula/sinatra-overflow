<!DOCTYPE html>
<html lang="en">
<head>
  <!--
    normalize.css removes cross-browser differences in defaults, e.g.,
    differences in how form elements appear between Firefox and IE
    See: http://necolas.github.com/normalize.css/
  -->
  <link rel="stylesheet" href="/css/normalize.css">
  <!--
    application.css is where you put your styles
  -->
  <link rel="stylesheet" href="/css/application.css">

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/js/application.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <title></title>
</head>
<body>
  <header>
    <div class="container menu">
      <a href="/" class="whitetext"><i class="whitetext fa fa-stack-overflow"></i> dbc<b>overflow</b></a>
      <%if current_user  %>
        <span class="whitetext right">Logged in as <%=@current_user.username %>
        &nbsp;<a id='log_out' href='/sessions/<%=current_user.id%>'>Log Out</a></span>
      <%else  %>
      <span class="whitetext right">
      <a class='popup_form' id='show_new_user_form' href='/users/new'>Create User</a> or
      <a class='popup_form' id='show_log_in_form' href='/sessions/new'>Log In</a></span>
      <%end %>
      <div class="show_form">
      </div>
    </div>

  </header>

    <div class="container">
  <%= yield %>
    </div>
</body>
</html>
